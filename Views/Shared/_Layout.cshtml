<script>
    const nav = document.querySelector('.nav')
    window.addEventListener('scroll', fixNav)

    function fixNav() {
        if (window.scrollY > nav.offsetHeight + 150) {
            nav.classList.add('active')
        } else {
            nav.classList.remove('active')
        }
    }
</script>
<style>
   @@import url('https://fonts.googleapis.com/css?family=Open+Sans');

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;


    }

    body {
        color: #222222;
        font-family: 'Open Sans', sans-serif;
        background-color: #f2f2f4;
    }

.container {
  	margin: 0 auto;
  	max-width: 1200px;
}

    .nav {
        background-color: #222222;
        left: 0;
        position: fixed;
        right: 0;
        top: 0;
        transition: all 0.3s ease-in-out;
        z-index: 9;
    }

.nav .container {
  	align-items: center;
  	display: flex;
  	justify-content: space-between;
  @*	padding: 20px 0;*@
  	transition: all 0.3s ease-in-out;
}

.nav ul {
  	align-items: center;
  	display: flex;
  	justify-content: center;
  	list-style-type: none;
}

        .nav a {
            color: #ef4b78; @* #FFFFFF;*@
            padding: 7px 15px;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
        }



.nav.active .container {
  padding: 10px 0;
}


.nav a:hover {
  color: #c0392b;
  font-weight: bold;
}

    ul {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
    }

        ul li {
            list-style: none;
        }

            ul li a {
                text-decoration: none;
                color: white;
                font-size: 18px;
                display: block;
                padding: 10px 15px;
                position: relative;
            }

                ul li a:before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background-color: white;
                    transform: scaleX(0);
                    transition: all 0.5s;
                    transform-origin: left
                }

                ul li a:hover:before, ul li a:hover:after {
                    transform: scaleX(1);
                }

                ul li a:after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background-color: white;
                    transform: scaleX(0);
                    transition: all 0.5s;
                    transform-origin: right
                }
    .navbar-brand {
        font-size: 30px;
        color: #ef4b78 !important;
        font-weight: bold;
        font-family: 'Pacifico', cursive;
    }
    .butn {
        color: #c0392b;
    }
    .butn:hover {
        font-weight:bold;
        color:white;
    }

@*-----------------navbar dropdown------------*@
    .clsUl {
        font-family: Arial, Verdana;
        font-size: 14px;
        margin: 0;
        padding: 0;
        list-style: none;
    }

        .clsUl .clsLi {
            display: block;
            position: relative;
            float: left;
        }

    .clsLi .clsUl {
        display: none;
    }

    .clsUl .clsLi a {
        display: block;
        text-decoration: none;
        color: #ef4b78;
        border-top: 1px solid #ffffff;
        padding: 5px 15px 5px 15px;
        background: #2C5463;
        margin-left: 1px;
        white-space: nowrap;
    }

        .clsUl .clsLi a:hover {
            background: black;
            color: #ef4b78;
        }

    .clsLi:hover .clsUl {
        display: block;
        position: absolute;
    }

    .clsLi:hover .clsLi {
        float: none;
        font-size: 11px;
    }

    .clsLi:hover a {
        background: black;
    }

    .clsLi:hover .clsLi a:hover {
        background: black;
    }

</style>
